@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1" />
        <title>CRM</title>
    </head>
    <body>
        <!-- Home -->
        <div data-role="page" id="page1">
            <div data-theme="a" data-role="header" data-position="inline">
                <h3>
                    CRM
                </h3>
            </div>
            <div data-role="content" style="padding: 15px">
                <div>
                    <b>
                        Relacionamento com Cliente
                    </b>
                </div>
                <div id="divUsuario">
                    <h2>
                        Bem vindo Sr. @ViewBag.Usuario
                    </h2>
                </div>
                <ul data-role="listview" data-divider-theme="a" data-inset="true">
                    <li data-role="list-divider" role="heading">
                        @ViewBag.MenssagemTituloVisitas
                    </li>
                    <li data-theme="c" >
                        @Html.ActionLink("Visitas", "Index", "Visita")
                        <span class="ui-li-count ui-btn-up-c ui-btn-corner-all">@ViewBag.qtdVisitas</span>
                    </li>
                    <li data-theme="c">
                        @Html.ActionLink("Tarefas", "Index", "Tarefa")
                        <span class="ui-li-count ui-btn-up-c ui-btn-corner-all">0</span>
                    </li>
                    <li data-theme="c">
                        @Html.ActionLink("Agenda", "Index", "Agenda")
                    </li>
                    <li data-theme="c">
                        @Html.ActionLink("Relacionamento", "Index", "Relacionamento")
                    </li>
                </ul>
            </div>
            <div data-theme="a" data-role="footer" data-position="fixed">
                <h3>
                    Benner Sistemas
                </h3>
            </div>
        </div>
        <script>
            $(document).ready(function () {
                
            });
        </script>
    </body>
</html>

